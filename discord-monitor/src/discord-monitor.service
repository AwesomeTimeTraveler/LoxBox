
[Unit]
Description=Incubator Discord Monitor (parallel, read-only)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/incubator-discord
EnvironmentFile=/opt/incubator-discord/.env
ExecStart=/usr/bin/python3 -m src.main
Restart=always
RestartSec=5
User=incubator
Group=incubator

# Hardening
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target