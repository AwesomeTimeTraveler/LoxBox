# MQTT
MQTT_ENABLED=true
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=incubator-discord
MQTT_STATUS_TOPIC=incubator/status/#
MQTT_COMMAND_TOPIC=incubator/command

# File fallback (used if MQTT_ENABLED=false)
STATUS_JSON_PATH=/var/lib/incubator/status.json
STATUS_FILE_POLL_SEC=2
STATUS_FILE_FORMAT=json   # use 'csv' if your status file is CSV

# Thresholds (optional; leave blank to disable a check)
TEMP_MAX_C=39.0
TEMP_MIN_C=0
CO2_MAX_PCT=
O2_MIN_PCT=

# Formatting
DISPLAY_UNITS_TEMP=C # C or F

# Flexible field mapping (logical -> payload keys)
# Logical: temp_c, co2_pct, o2_pct, states
SENSOR_FIELD_MAP={"temp_c":"temp_c","co2_pct":"co2_pct","o2_pct":"o2_pct","states":"states"}

# If your payload uses individual boolean keys for states, list them here.
# They will be collected into the "States:" line automatically.
SENSOR_STATES_KEYS=["heater_state","o2_state","co2_state"]

# Optional per-field scale (applied after reading)
# e.g. if CO2 comes as 0â€“1 fraction and you want percent: {"co2_pct":100}
SENSOR_SCALES={}


USE_EMBEDS=true
SHOW_SYSTEM_LINE=true